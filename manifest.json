{
  "manifest_version": 2,

  "name": "__MSG_manifest_name__",
  "short_name": "Skipflix",
  "description": "__MSG_manifest_description__",
  "default_locale": "en",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon48.png"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["autoskip.js"]
    }
  ]

}
